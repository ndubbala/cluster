# Generated by ansible-awesome

{% if network_interface.hwaddr is defined and network_interface.vlan is not defined %}
HWADDR={{ network_interface.hwaddr }}
{% endif %}
{% if network_interface.vlan is defined %}
VLAN=yes
{% endif %}
DEVICE={{ interface }}
BOOTPROTO=static
ONBOOT=yes
{% if network_interface.ipv4 is defined %}
IPADDR={{ network_interface.ipv4 | ipaddr('address') }}
NETMASK={{ network_interface.ipv4 | ipaddr('netmask') }}
NETWORK={{ network_interface.ipv4 | ipaddr('network') }}
BROADCAST={{ network_interface.ipv4 | ipaddr('broadcast') }}
{% if network_interface.gateway is defined %}
GATEWAY={{ network_interface.gateway }}
{% else %}
DEFROUTE=no
{% endif %}
{% endif %}
{% if network_interface.promisc is defined or network_interface.macvlan is defined %}
PROMISC=yes
{% endif %}
{% if network_interface.name is defined %}
NAME={{ network_interface.name }}
{% endif %}
NM_CONTROLLED=no
