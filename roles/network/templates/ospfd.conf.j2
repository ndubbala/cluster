router ospf
{% for network_interface in (network_interfaces | selectattr('ospf_area','defined') | list) %}
{% if 32 == network_interface.ipv4 | ipaddr('prefix') %}
  network {{ network_interface.ipv4 }} area {{ network_interface.ospf_area | ipaddr('address')}}
{% else %}
  network {{ network_interface.ipv4 | ipaddr('network') }}/{{ network_interface.ipv4 | ipaddr('prefix') }} area {{ network_interface.ospf_area | ipaddr('address')}}
{% endif %}
{% endfor %}
