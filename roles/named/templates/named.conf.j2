acl "trusted" {
  localhost;
  59.167.193.8/32;
  104.237.130.251/32;
  109.74.194.222/32;
  139.162.60.74/32;
  150.101.220.176/29;
  172.16.0.0/12;
};

options {
  listen-on port 53 { {% for n in network_interfaces %}{{ n.ipv4 | ipaddr('address') }}; {% endfor %}};
  directory   "/var/named";
  dump-file   "/var/named/data/cache_dump.db";
  statistics-file "/var/named/data/named_stats.txt";
  memstatistics-file "/var/named/data/named_mem_stats.txt";
  allow-query     { trusted; };

  recursion yes;

  dnssec-enable yes;
  dnssec-validation yes;

  bindkeys-file "/etc/named.iscdlv.key";

  managed-keys-directory "/var/named/dynamic";

  pid-file "/run/named/named.pid";
  session-keyfile "/run/named/session.key";
};

logging {
  channel default_debug {
    file "data/named.run";
    severity dynamic;
  };
};

zone "." IN {
  type hint;
  file "root.named";
};

zone "localhost.localdomain" IN {
  type master;
  file "localhost.named";
  allow-update { none; };
};

zone "localhost" IN {
  type master;
  file "localhost.named";
  allow-update { none; };
};

zone "1.0.0.127.in-addr.arpa" IN {
  type master;
  file "loopback.named";
  allow-update { none; };
};

zone "0.in-addr.arpa" IN {
  type master;
  file "empty.named";
  allow-update { none; };
};

{% for n in named_zones %}
zone "{{ n.zone }}" IN {
  type master;
  file "{{ n.file | default(n.zone.split('.') | reverse | join('.')) }}.named";
  allow-update { none; };
  allow-query { any; };
};

{% endfor %}